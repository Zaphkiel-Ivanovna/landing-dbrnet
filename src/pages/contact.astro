---
import ContactForm from '../components/ContactForm';
import Navbar from '../components/Navbar';
import { BackgroundBeams } from '../components/ui/background-beams';
import Layout from '../layouts/Layout.astro';
---

<Layout
    title='Contact | Damien Dubernet - Développeur Full Stack'
    description='Contactez Damien Dubernet pour vos projets de développement web et mobile. Devis gratuit et réponse rapide garantie.'
    canonical={`${import.meta.env.PUBLIC_SITE_URL}/contact`}
>
    <Navbar client:load />

    <main id='main-content' class='relative min-h-screen pt-32 pb-20 px-4'>
        <div class='absolute inset-0 overflow-hidden'>
            <BackgroundBeams client:load className='opacity-30' />
        </div>

        <div class='relative z-10 mx-auto max-w-6xl'>
            <div class='mb-12 text-center'>
                <h1 class='mb-4 text-4xl font-bold sm:text-5xl'>
                    <span class='text-[var(--color-foreground)]'>Me</span>{' '}
                    <span class='gradient-text'>Contacter</span>
                </h1>
                <p class='mx-auto max-w-2xl text-lg text-[var(--color-muted)]'>
                    Vous avez un projet en tête ? Une question ? Je suis à votre écoute. N'hésitez pas à me contacter
                    pour en discuter.
                </p>
            </div>

            <div class='grid gap-12 lg:grid-cols-5'>
                <div class='lg:col-span-3'>
                    <ContactForm client:load />
                </div>

                <div class='lg:col-span-2'>
                    <div class='space-y-6'>
                        <div class='rounded-2xl border border-[var(--color-border)] bg-[var(--color-card)] p-6'>
                            <h2 class='mb-4 text-lg font-bold text-[var(--color-foreground)]'>Contact Direct</h2>
                            <div class='space-y-4'>
                                <a
                                    href={`mailto:${import.meta.env.PUBLIC_EMAIL}`}
                                    class='flex items-center gap-3 rounded-xl border border-[var(--color-border)] bg-[var(--color-background)] p-4 transition-all hover:border-[var(--color-primary)]/50'
                                >
                                    <div class='rounded-lg bg-[var(--color-primary)]/10 p-2'>
                                        <svg
                                            class='h-5 w-5 text-[var(--color-primary)]'
                                            fill='none'
                                            stroke='currentColor'
                                            viewBox='0 0 24 24'
                                        >
                                            <path
                                                stroke-linecap='round'
                                                stroke-linejoin='round'
                                                stroke-width='2'
                                                d='M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z'
                                            ></path>
                                        </svg>
                                    </div>
                                    <div>
                                        <p class='text-xs text-[var(--color-muted)]'>Email</p>
                                        <p class='font-medium text-[var(--color-foreground)]'>{import.meta.env.PUBLIC_EMAIL}</p>
                                    </div>
                                </a>

                                <a
                                    href={import.meta.env.PUBLIC_LINKEDIN_URL}
                                    target='_blank'
                                    rel='noopener noreferrer'
                                    class='flex items-center gap-3 rounded-xl border border-[var(--color-border)] bg-[var(--color-background)] p-4 transition-all hover:border-[var(--color-primary)]/50'
                                >
                                    <div class='rounded-lg bg-[#0077b5]/10 p-2'>
                                        <svg class='h-5 w-5 text-[#0077b5]' fill='currentColor' viewBox='0 0 24 24'>
                                            <path
                                                d='M20.447 20.452h-3.554v-5.569c0-1.328-.027-3.037-1.852-3.037-1.853 0-2.136 1.445-2.136 2.939v5.667H9.351V9h3.414v1.561h.046c.477-.9 1.637-1.85 3.37-1.85 3.601 0 4.267 2.37 4.267 5.455v6.286zM5.337 7.433c-1.144 0-2.063-.926-2.063-2.065 0-1.138.92-2.063 2.063-2.063 1.14 0 2.064.925 2.064 2.063 0 1.139-.925 2.065-2.064 2.065zm1.782 13.019H3.555V9h3.564v11.452zM22.225 0H1.771C.792 0 0 .774 0 1.729v20.542C0 23.227.792 24 1.771 24h20.451C23.2 24 24 23.227 24 22.271V1.729C24 .774 23.2 0 22.222 0h.003z'
                                            ></path>
                                        </svg>
                                    </div>
                                    <div>
                                        <p class='text-xs text-[var(--color-muted)]'>LinkedIn</p>
                                        <p class='font-medium text-[var(--color-foreground)]'>Damien Dubernet</p>
                                    </div>
                                </a>
                            </div>
                        </div>

                        <div class='rounded-2xl border border-[var(--color-border)] bg-[var(--color-card)] p-6'>
                            <h2 class='mb-4 text-lg font-bold text-[var(--color-foreground)]'>Localisation</h2>
                            <div class='flex items-start gap-3'>
                                <div class='rounded-lg bg-[var(--color-accent)]/10 p-2'>
                                    <svg
                                        class='h-5 w-5 text-[var(--color-accent)]'
                                        fill='none'
                                        stroke='currentColor'
                                        viewBox='0 0 24 24'
                                    >
                                        <path
                                            stroke-linecap='round'
                                            stroke-linejoin='round'
                                            stroke-width='2'
                                            d='M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z'
                                        ></path>
                                        <path
                                            stroke-linecap='round'
                                            stroke-linejoin='round'
                                            stroke-width='2'
                                            d='M15 11a3 3 0 11-6 0 3 3 0 016 0z'></path>
                                    </svg>
                                </div>
                                <div>
                                    <p class='font-medium text-[var(--color-foreground)]'>{import.meta.env.PUBLIC_LOCATION}</p>
                                    <p class='text-sm text-[var(--color-muted)]'>
                                        Disponible en remote dans toute la France et à l'international
                                    </p>
                                </div>
                            </div>
                        </div>

                        <div class='rounded-2xl border border-green-500/30 bg-green-500/5 p-6'>
                            <div class='flex items-center gap-3'>
                                <span class='relative flex h-3 w-3'>
                                    <span
                                        class='absolute inline-flex h-full w-full animate-ping rounded-full bg-green-400 opacity-75'
                                    ></span>
                                    <span class='relative inline-flex h-3 w-3 rounded-full bg-green-500'></span>
                                </span>
                                <div>
                                    <p class='font-medium text-green-400'>Disponible</p>
                                    <p class='text-sm text-green-400/70'>Ouvert aux nouveaux projets</p>
                                </div>
                            </div>
                        </div>

                        <div class='rounded-2xl border border-[var(--color-border)] bg-[var(--color-card)] p-6'>
                            <div class='flex items-center gap-3'>
                                <div class='rounded-lg bg-[var(--color-primary)]/10 p-2'>
                                    <svg
                                        class='h-5 w-5 text-[var(--color-primary)]'
                                        fill='none'
                                        stroke='currentColor'
                                        viewBox='0 0 24 24'
                                    >
                                        <path
                                            stroke-linecap='round'
                                            stroke-linejoin='round'
                                            stroke-width='2'
                                            d='M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z'></path>
                                    </svg>
                                </div>
                                <div>
                                    <p class='font-medium text-[var(--color-foreground)]'>Réponse rapide</p>
                                    <p class='text-sm text-[var(--color-muted)]'>Généralement sous 24h</p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class='mt-16 text-center'>
                <a
                    href='/'
                    class='inline-flex items-center gap-2 text-sm text-[var(--color-muted)] transition-colors hover:text-[var(--color-primary)]'
                >
                    <svg class='h-4 w-4' fill='none' stroke='currentColor' viewBox='0 0 24 24'>
                        <path
                            stroke-linecap='round'
                            stroke-linejoin='round'
                            stroke-width='2'
                            d='M10 19l-7-7m0 0l7-7m-7 7h18'></path>
                    </svg>
                    Retour à l'accueil
                </a>
            </div>
        </div>
    </main>

    <footer class='border-t border-[var(--color-border)] bg-[var(--color-background)] py-8'>
        <div class='mx-auto max-w-6xl px-4'>
            <div class='flex flex-col items-center justify-between gap-4 sm:flex-row'>
                <div class='flex items-center gap-3'>
                    <img src='/images/logo.svg' alt='DBRNET Logo' class='h-6 w-auto' width='24' height='24' />
                    <span class='text-sm text-[var(--color-muted)]'>
                        &copy; {new Date().getFullYear()} Damien Dubernet
                    </span>
                </div>
                <div class='flex items-center gap-6'>
                    <a
                        href={import.meta.env.PUBLIC_LINKEDIN_URL}
                        target='_blank'
                        rel='noopener noreferrer'
                        class='text-sm text-[var(--color-muted)] transition-colors hover:text-[var(--color-primary)]'
                    >
                        LinkedIn
                    </a>
                    <a
                        href={import.meta.env.PUBLIC_GITHUB_URL}
                        target='_blank'
                        rel='noopener noreferrer'
                        class='text-sm text-[var(--color-muted)] transition-colors hover:text-[var(--color-primary)]'
                    >
                        GitHub
                    </a>
                    <a
                        href={`mailto:${import.meta.env.PUBLIC_EMAIL}`}
                        class='text-sm text-[var(--color-muted)] transition-colors hover:text-[var(--color-primary)]'
                    >
                        Email
                    </a>
                </div>
            </div>
        </div>
    </footer>
</Layout>
